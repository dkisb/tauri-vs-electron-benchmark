{
  "name": "electron-bench-app",
  "version": "1.0.0",
  "description": "Electron benchmark app",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.bench.electron",
    "productName": "ElectronBench",
    "directories": {
      "output": "out"
    },
    "mac": {
      "target": [
        { "target": "dir", "arch": ["arm64", "x64"] }
      ]
    },
    "win": {
      "target": [
        { "target": "dir", "arch": ["x64"] }
      ]
    },
    "linux": {
      "target": [
        { "target": "dir", "arch": ["x64"] }
      ]
    }
  }
}
